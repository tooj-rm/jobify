{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "paths": {
      "@clean/domain": [
        "domain/src"
      ],
      "@clean/adapters": [
        "adapters/src"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  }
}
